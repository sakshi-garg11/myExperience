<% include ../partials/header %>



<div class="container">
    <header class="jumbotron">
        <div class="container trans">
            <h2>View some great experiences from all over the world</h2>
            <p>
              <a id="watever"  class="btn btn-warning btn-lg " href="/campgrounds/new">Wanna share yours?</a>  
            </p>
        </div>
    </header>
    
    <div class="row text-center" style= "display:flex; flex-wrap:wrap;">
       <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
           <div style="border: 1px solid #ddd;border-radius: 4px;padding: 5px;" class="thumbnail" >
              <img class= "great" src="<%= campground.image %>" >
                <div>
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>    

<% include ../partials/footer %>